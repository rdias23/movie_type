<div class="min-h-screen bg-black text-white">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <!-- Progress bar -->
    <div class="mb-12">
      <div class="h-2 bg-white/10 rounded-full">
        <div class="h-full bg-white rounded-full transition-all duration-500" style="width: <%= @progress %>%"></div>
      </div>
      <p class="text-gray-400 mt-2 text-sm text-right">
        Question <%= @current_question_number %> of <%= @total_questions %>
      </p>
    </div>

    <!-- Question -->
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">
        <%= @current_question.prompt %>
      </h2>

      <div class="grid grid-cols-2 gap-8 text-center text-xl text-gray-300 mb-8">
        <div><%= @current_question.low_text %></div>
        <div><%= @current_question.high_text %></div>
      </div>
    </div>

    <!-- Answer options -->
    <div class="space-y-4 max-w-2xl mx-auto">
      <%= form_with url: quiz_answer_path, local: true do |f| %>
        <%= f.hidden_field :question_id, value: @current_question.id %>
        
        <div class="space-y-4">
          <% (1..5).each do |value| %>
            <button type="submit" 
                    name="value"
                    value="<%= value %>"
                    class="w-full p-4 rounded-lg border border-white/20 hover:bg-white/10 transition-colors text-center">
              <div class="text-lg">
                <% case value %>
                <% when 1 %>
                  Strongly prefer the first option
                <% when 2 %>
                  Somewhat prefer the first option
                <% when 3 %>
                  I like both equally
                <% when 4 %>
                  Somewhat prefer the second option
                <% when 5 %>
                  Strongly prefer the second option
                <% end %>
              </div>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
