<div class="min-h-screen bg-black text-white">
  <div class="max-w-4xl mx-auto px-4 py-16">
    <!-- Progress bar -->
    <div class="mb-12">
      <div class="h-2 bg-white/10 rounded-full">
        <div class="h-full bg-white rounded-full transition-all duration-500" style="width: <%= @progress %>%"></div>
      </div>
      <p class="text-gray-400 mt-2 text-sm text-right">
        Question <%= params[:id] %> of <%= @total_questions %>
      </p>
    </div>

    <!-- Question -->
    <div class="mb-12">
      <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">
        <%= @current_question.prompt %>
      </h2>
    </div>

    <!-- Answer options -->
    <div class="space-y-4 max-w-2xl mx-auto">
      <% (1..5).each do |value| %>
        <%= form_tag quiz_answer_path, method: :post, class: "w-full" do %>
          <%= hidden_field_tag :question_id, @current_question.id %>
          <%= hidden_field_tag :value, value %>
          
          <button type="submit" 
                  class="w-full text-left p-6 rounded-lg border border-white/20 hover:bg-white/10 transition-colors">
            <div class="flex items-center justify-between">
              <span class="text-lg">
                <% case value %>
                <% when 1 %>
                  Strongly prefer: <%= @current_question.low_text %>
                <% when 2 %>
                  Somewhat prefer: <%= @current_question.low_text %>
                <% when 3 %>
                  Neutral / Both equally
                <% when 4 %>
                  Somewhat prefer: <%= @current_question.high_text %>
                <% when 5 %>
                  Strongly prefer: <%= @current_question.high_text %>
                <% end %>
              </span>
              <span class="text-2xl opacity-50">
                <%= ["⬅️", "↙️", "↔️", "↗️", "➡️"][value-1] %>
              </span>
            </div>
          </button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
